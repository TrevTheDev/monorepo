{
  "name": "@trevthedev/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@trevthedev/toolbelt": "workspace:^",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "type": "module"
}
